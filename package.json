{
  "name": "@pgflow/source",
  "version": "0.0.0",
  "license": "AGPL-3.0",
  "scripts": {
    "build": "nx run-many --target=build --all",
    "version": "pnpm changeset version && ./scripts/update-jsr-json-version.sh",
    "publish:npm": "pnpm nx run-many -t build && pnpm publish --recursive",
    "publish:jsr": "cd ./pkgs/edge-worker && jsr publish --allow-slow-types",
    "changeset:tag": "pnpm changeset tag && git push --follow-tags",
    "release": "pnpm run publish:npm && pnpm run publish:jsr && pnpm run changeset:tag"
  },
  "private": true,
  "devDependencies": {
    "@axhxrx/nx-deno": "^1.0.2",
    "@changesets/cli": "^2.28.1",
    "@eslint/js": "^9.8.0",
    "@nx/esbuild": "20.3.0",
    "@nx/eslint": "20.3.0",
    "@nx/eslint-plugin": "20.3.0",
    "@nx/js": "20.3.0",
    "@nx/node": "20.3.0",
    "@nx/plugin": "20.3.0",
    "@nx/vite": "20.3.0",
    "@nx/web": "20.3.0",
    "@swc-node/register": "~1.9.1",
    "@swc/cli": "~0.3.12",
    "@swc/core": "~1.5.7",
    "@swc/helpers": "~0.5.11",
    "@types/node": "~18.16.9",
    "@vitest/coverage-v8": "^1.0.4",
    "@vitest/ui": "^1.3.1",
    "esbuild": "^0.19.2",
    "eslint": "^9.8.0",
    "eslint-config-prettier": "^9.0.0",
    "jsdom": "~22.1.0",
    "jsr": "^0.13.4",
    "nx": "20.3.0",
    "prettier": "^2.6.2",
    "tslib": "^2.3.0",
    "typescript": "~5.6.2",
    "typescript-eslint": "^8.13.0",
    "vite": "^5.0.0",
    "vite-plugin-dts": "~3.8.1",
    "vite-tsconfig-paths": "^5.1.4",
    "vitest": "^1.3.1"
  },
  "dependencies": {
    "@nx/devkit": "20.3.0"
  }
}
