{
  "name": "playground",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "examples/playground",
  "projectType": "application",
  "tags": [],
  "targets": {
    "build": {
      "executor": "@nx/next:build",
      "outputs": ["{options.outputPath}"],
      "options": {
        "outputPath": "examples/playground/.next"
      },
      "dependsOn": ["^build"]
    },
    "serve": {
      "executor": "@nx/next:server",
      "options": {
        "buildTarget": "playground:build",
        "dev": true
      }
    },
    "export": {
      "executor": "@nx/next:export",
      "options": {
        "buildTarget": "playground:build:production"
      }
    },
    "ensure-ci-environment": {
      "executor": "nx:run-commands",
      "options": {
        "command": "if [ \"$CI\" != \"true\" ]; then echo \"Error: Deploy commands should only be run in CI environments. Set CI=true to override.\"; exit 1; else echo \"CI environment verified\"; fi"
      }
    },
    "deploy": {
      "executor": "nx:run-commands",
      "dependsOn": ["build", "ensure-ci-environment"],
      "options": {
        "cwd": "examples/playground",
        "command": "netlify deploy --prod --dir=.next"
      }
    },
    "deploy:preview": {
      "executor": "nx:run-commands",
      "dependsOn": ["build", "ensure-ci-environment"],
      "options": {
        "cwd": "examples/playground",
        "command": "netlify deploy --dir=.next --alias=pr-${PR_NUMBER:-preview}"
      }
    }
  }
}
