{
  "name": "playground",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "examples/playground",
  "projectType": "application",
  "tags": [],
  "targets": {
    "build": {
      "executor": "nx:run-commands",
      "options": {
        "cwd": "examples/playground",
        "command": "npm run build"
      }
    },
    "ensure-ci-environment": {
      "executor": "nx:run-commands",
      "options": {
        "command": "if [ \"$CI\" != \"true\" ]; then echo \"Error: Deploy commands should only be run in CI environments. Set CI=true to override.\"; exit 1; else echo \"CI environment verified\"; fi"
      }
    },
    "deploy": {
      "executor": "nx:run-commands",
      "dependsOn": ["build", "ensure-ci-environment"],
      "options": {
        "cwd": "examples/playground",
        "command": "npx netlify deploy --prod --dir=.next"
      }
    },
    "deploy:preview": {
      "executor": "nx:run-commands",
      "dependsOn": ["build", "ensure-ci-environment"],
      "options": {
        "cwd": "examples/playground",
        "command": "npx netlify deploy --dir=.next --alias=pr-${PR_NUMBER:-preview}"
      }
    }
  }
}
