{
  "name": "core",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "pkgs/core/src",
  "projectType": "library",
  "tags": [],
  "targets": {
    "lint": {
      "executor": "nx:run-commands",
      "options": {
        "cwd": "{workspaceRoot}",
        "commands": [
          "sqruff --parsing-errors --config ./.sqruff lint {projectRoot}/**/*.sql"
        ],
        "inputs": ["{projectRoot}/**/*.sql", "{workspaceRoot}/.sqruff"],
        "parallel": false
      }
    },
    "supabase:start": {
      "executor": "nx:run-commands",
      "options": {
        "cwd": "{projectRoot}",
        "commands": ["supabase start"],
        "parallel": false
      }
    },
    "supabase:stop": {
      "executor": "nx:run-commands",
      "options": {
        "cwd": "{projectRoot}",
        "commands": ["supabase stop --no-backup"],
        "parallel": false
      }
    },
    "supabase:status": {
      "executor": "nx:run-commands",
      "options": {
        "cwd": "{projectRoot}",
        "commands": ["supabase status"],
        "parallel": false
      }
    },
    "supabase:restart": {
      "executor": "nx:run-commands",
      "options": {
        "cwd": "{projectRoot}",
        "commands": ["supabase stop --no-backup", "supabase start"],
        "parallel": false
      }
    },
    "supabase:reset": {
      "executor": "nx:run-commands",
      "options": {
        "cwd": "{projectRoot}",
        "commands": ["supabase db reset"],
        "parallel": false
      }
    },
    "test": {
      "executor": "nx:run-commands",
      "options": {
        "cwd": "{projectRoot}",
        "commands": ["scripts/run-test-with-colors"],
        "parallel": false
      }
    },
    "test:watch": {
      "executor": "nx:run-commands",
      "options": {
        "cwd": "{projectRoot}",
        "command": "scripts/watch-test"
      },
      "cache": false
    }
  }
}
