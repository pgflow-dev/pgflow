{
  "name": "website",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "pkgs/website/src",
  "projectType": "application",
  "tags": [],
  "targets": {
    "build": {
      "executor": "nx:run-commands",
      "outputs": ["{options.outputPath}"],
      "options": {
        "cwd": "pkgs/website",
        "command": "astro build",
        "outputPath": "pkgs/website/dist"
      }
    },
    "dev": {
      "executor": "nx:run-commands",
      "options": {
        "cwd": "pkgs/website",
        "command": "astro dev"
      }
    },
    "preview": {
      "executor": "nx:run-commands",
      "options": {
        "cwd": "pkgs/website",
        "command": "astro preview"
      }
    },
    "ensure-ci-environment": {
      "executor": "nx:run-commands",
      "options": {
        "command": "if [ \"$CI\" != \"true\" ]; then echo \"Error: Deploy commands should only be run in CI environments. Set CI=true to override.\"; exit 1; else echo \"CI environment verified\"; fi"
      }
    },
    "deploy": {
      "executor": "nx:run-commands",
      "dependsOn": ["build", "ensure-ci-environment"],
      "options": {
        "cwd": "pkgs/website",
        "command": "wrangler pages deploy dist"
      }
    },
    "deploy:preview": {
      "executor": "nx:run-commands",
      "dependsOn": ["build", "ensure-ci-environment"],
      "options": {
        "cwd": "pkgs/website",
        "command": "wrangler pages deploy dist --branch=${CLOUDFLARE_BRANCH:-preview}"
      }
    }
  }
}
