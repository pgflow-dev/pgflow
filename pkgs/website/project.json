{
  "name": "website",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "pkgs/website/src",
  "projectType": "application",
  "tags": [],
  "targets": {
    "build": {
      "executor": "nx:run-commands",
      "inputs": [
        "default",
        "^production",
        {
          "env": "VITE_SUPABASE_URL"
        },
        {
          "env": "VITE_SUPABASE_ANON_KEY"
        }
      ],
      "outputs": ["{options.outputPath}"],
      "options": {
        "cwd": "pkgs/website",
        "command": "astro build",
        "outputPath": "pkgs/website/dist"
      }
    },
    "dev": {
      "executor": "nx:run-commands",
      "options": {
        "cwd": "pkgs/website",
        "command": "astro dev"
      }
    },
    "preview": {
      "executor": "nx:run-commands",
      "options": {
        "cwd": "pkgs/website",
        "command": "astro preview"
      }
    },
    "ensure-ci-environment": {
      "executor": "nx:run-commands",
      "options": {
        "command": "if [ \"$CI\" != \"true\" ]; then echo \"Error: Deploy commands should only be run in CI environments. Set CI=true to override.\"; exit 1; else echo \"CI environment verified\"; fi"
      }
    },
    "deploy": {
      "executor": "nx:run-commands",
      "cache": false,
      "local": true,
      "dependsOn": ["build", "ensure-ci-environment"],
      "inputs": ["{projectRoot}/wrangler.toml"],
      "options": {
        "cwd": "pkgs/website",
        "command": "wrangler pages deploy dist --branch=main"
      }
    },
    "deploy:preview": {
      "executor": "nx:run-commands",
      "cache": false,
      "local": true,
      "dependsOn": ["build"],
      "inputs": ["{projectRoot}/wrangler.toml"],
      "options": {
        "cwd": "pkgs/website",
        "command": "wrangler pages deploy dist --branch=${CLOUDFLARE_BRANCH:-preview-local}"
      }
    },
    "supabase:start": {
      "executor": "nx:run-commands",
      "local": true,
      "cache": false,
      "options": {
        "cwd": "pkgs/website",
        "command": "supabase start"
      }
    },
    "supabase:stop": {
      "executor": "nx:run-commands",
      "local": true,
      "cache": false,
      "options": {
        "cwd": "pkgs/website",
        "command": "supabase stop --no-backup"
      }
    },
    "supabase:status": {
      "executor": "nx:run-commands",
      "local": true,
      "cache": false,
      "options": {
        "cwd": "pkgs/website",
        "command": "supabase status"
      }
    },
    "supabase:studio": {
      "executor": "nx:run-commands",
      "local": true,
      "cache": false,
      "options": {
        "cwd": "pkgs/website",
        "command": "supabase studio"
      }
    },
    "dev:full": {
      "executor": "nx:run-commands",
      "local": true,
      "cache": false,
      "options": {
        "cwd": "{workspaceRoot}",
        "commands": [
          "scripts/supabase-start-locked.sh {projectRoot}",
          "cd {projectRoot} && astro dev"
        ]
      }
    }
  }
}
