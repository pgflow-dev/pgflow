{
  "name": "cli",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "pkgs/cli/src",
  "projectType": "library",
  "tags": [],
  "// targets": "to see all targets run: nx show project cli --web",
  "targets": {
    "build": {
      "executor": "@nx/js:tsc",
      "options": {
        "main": "{projectRoot}/src/index.ts",
        "tsConfig": "{projectRoot}/tsconfig.lib.json",
        "outputPath": "{projectRoot}/dist",
        "rootDir": "{projectRoot}/src",
        "assets": [
          {
            "input": "{projectRoot}/src/deno",
            "glob": "**/*",
            "output": "deno"
          }
        ]
      }
    },
    "serve": {
      "executor": "nx:run-commands",
      "options": {
        "command": "tsx src/index.ts",
        "cwd": "{projectRoot}"
      }
    },
    "test": {
      "executor": "nx:noop",
      "dependsOn": ["test:e2e:install", "test:e2e:compile"]
    },
    "test:e2e:install": {
      "executor": "nx:run-commands",
      "dependsOn": ["build"],
      "options": {
        "commands": [
          "rm -rf supabase/",
          "npx -y supabase@latest init --with-vscode-settings --with-intellij-settings",
          "node dist/index.js install --supabase-path supabase/ --yes",
          "./scripts/assert-pgflow-installed"
        ],
        "cwd": "{projectRoot}",
        "parallel": false
      }
    },
    "test:e2e:compile": {
      "executor": "nx:run-commands",
      "dependsOn": ["test:e2e:install", "build"],
      "options": {
        "commands": [
          "rm -rf supabase/",
          "npx -y supabase@latest init --with-vscode-settings --with-intellij-settings",
          "node dist/index.js compile examples/analyze_website.ts --deno-json examples/deno.json --supabase-path supabase",
          "./scripts/assert-flow-compiled"
        ],
        "cwd": "{projectRoot}",
        "parallel": false
      }
    }
  }
}
