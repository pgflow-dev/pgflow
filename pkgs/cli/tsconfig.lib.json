  "compilerOptions": {
    "lib": ["es2022", "dom", "dom.iterable"]
  },
  "include": ["src/**/*.ts"],
  "references": [
    {
      "path": "../dsl/tsconfig.lib.json"
    },
    {
      "path": "../core/tsconfig.lib.json"
    }
  ],
  "exclude": [
    "vite.config.ts",
    "vite.config.mts",
    "vitest.config.ts",
