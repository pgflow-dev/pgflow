{
  "name": "dsl",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "pkgs/dsl/src",
  "projectType": "library",
  "tags": [],
  "// targets": "to see all targets run: nx show project @pgflow/dsl --web",
  "targets": {
    "build": {
      "executor": "@nx/esbuild:esbuild",
      "outputs": ["{options.outputPath}"],
      "options": {
        "outputPath": "pkgs/dsl/dist",
        "main": "pkgs/dsl/src/index.ts",
        "tsConfig": "pkgs/dsl/tsconfig.lib.json",
        "assets": ["pkgs/dsl/*.md"]
      }
    },
    "build:deno": {
      "executor": "nx:run-commands",
      "outputs": ["{workspaceRoot}/pkgs/dsl/deno-dist"],
      "options": {
        "cwd": "pkgs/dsl",
        "commands": [
          "mkdir -p deno-dist",
          "rm -r deno-dist/*",
          "cp -r src/* deno-dist/",
          "cp mod.ts deno-dist/",
          "cp deno.json deno-dist/",
          "cp deno.lock deno-dist/"
        ],
        "parallel": false
      }
    },
    "test": {
      "executor": "@nx/vite:test",
      "outputs": ["{workspaceRoot}/coverage/{projectRoot}"],
      "options": {
        "passWithNoTests": true,
        "reportsDirectory": "{workspaceRoot}/coverage/{projectRoot}"
      }
    }
  }
}
